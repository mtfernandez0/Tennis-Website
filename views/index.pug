extends layout

block frontPage
    img(src=`${info.src}` class="img-background")
    div(class="info-container")
        h1= info.name
        h1 Ranking: #{ info.rank }
        h1 Points: #{ info.points }

block chooseArrow
    if sortAsc
        i(class="arrows-tables fa-solid fa-chevron-down" id="arrow-rank")
    else
        i(class="arrows-tables fa-solid fa-chevron-up" id="arrow-rank")

block tables
    each data, i in table
        tr 
            td= data.rank
            td= data.name
            td= data.value.points
            td= data.value.pro_since 
            td= data.value.height
            td= data.value.record
            td= data.value.titles        

block tournaments
    each tournament of tournaments
        div(class="tournament-list-element")
            h2= tournament.competition_name
            p
            strong= tournament.competition_level
